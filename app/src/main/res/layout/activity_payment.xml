<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F8F8FF">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">
        <!-- PAYMENT SUMMARY CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/summary_card_bg"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/summaryTitle"
                android:layout_width="323dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:layout_marginBottom="12dp"
                android:text="Order Summary"
                android:textColor="#4C1D95"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/summaryDetails"
                android:layout_width="343dp"
                android:layout_height="wrap_content"
                android:text="- Movie: \n- Cinema: \n- Screen: \n- Seats: \n- Snacks: "
                android:textColor="#333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/summaryTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: KES 0"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_marginTop="15dp" />
        </LinearLayout>

        <!-- Header -->
        <TextView
            android:id="@+id/paymentHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:text="Choose Payment Method"
            android:textColor="#4C1D95"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- MPESA OPTION -->
        <LinearLayout
            android:id="@+id/mpesaOption"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:background="@drawable/payment_card_bg"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/mpesa_logo"
                android:contentDescription="Mpesa Logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M-PESA"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp" />

        </LinearLayout>

        <!-- VISA OPTION -->
        <LinearLayout
            android:id="@+id/visaOption"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:background="@drawable/payment_card_bg"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="30dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/visa_logo"
                android:contentDescription="Visa Logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VISA"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp" />

        </LinearLayout>



        <Button
            android:id="@+id/btnPay"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Complete Payment"
            android:backgroundTint="#4C1D95"
            android:textColor="#fff"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>
